@{
    ViewData["Title"] = "Business Details - Local Business Directory";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles1.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Places" asp-action="BusinessDetails">Places</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Places" asp-action="Business">Timings and Price</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="About" asp-action="About">About Us</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <main>
        <section class="main-heading">
            <h1>Places to Visit in Tampa</h1>
            <div id="business-list"></div>
        </section>
    </main>

    <!-- Add Review Modal -->
    <div id="add-review-modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Add Review</h2>
            <form id="add-review-form">
                <input type="number" id="rating" name="rating" min="1" max="5" placeholder="Rating (1-5)" required>
                <input type="text" id="reviewer" name="reviewer" placeholder="Your Name" required>
                <button type="submit">Submit Review</button>
            </form>
        </div>
    </div>
    <!-- Edit Review Modal -->
    <div id="edit-review-modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Edit Review</h2>
            <form id="edit-review-form">
                <input type="number" id="rating" name="rating" min="1" max="5" placeholder="Rating (1-5)" required>
                <input type="text" id="reviewer" name="reviewer" placeholder="Your Name" required>
                <button type="submit">Update Review</button>
            </form>
        </div>
    </div>

    <script src="/js/main.js"></script>


</body>
</html>
