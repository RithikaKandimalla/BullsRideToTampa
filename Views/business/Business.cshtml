@{
    ViewData["Title"] = "Places to Visit - Tampa Area";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles2.css">
    <!-- Include Chart.js library -->
  

</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Places" asp-action="BusinessDetails">Places</a></li>
                <li><a asp-controller="Business" asp-action="Business" class="active">Timings and Price</a></li>
                <li><a asp-controller="About" asp-action="About">About Us</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <section id="business-details">
            <!-- Business details table will be dynamically generated here -->
        </section>

        <section class="charts-section">
            <h2>Data Visualizations</h2>
            <div>
                <h3>Average Rating for Each Place</h3>
                <canvas id="averageRatingByPlaceChart"></canvas>
            </div>
            <div>
                <h3>Prices vs Places</h3>
                <canvas id="pricesVsPlacesChart"></canvas>
            </div>
            <div>
                <h3>Top 5 Places by Rating</h3>
                <canvas id="topPlacesByRatingChart"></canvas>
            </div>
            <script src="~/js/business.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            <script src="~/js/charts.js"></script>

            


        </section>
    </main>
</body>
</html>